<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Panel Quản Lý On/Off Duty</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; }
  </style>
</head>
<body class="bg-gray-100 min-h-screen">

  <div class="container mx-auto p-6 max-w-6xl">
    <h1 class="text-3xl font-bold text-gray-800 mb-2 flex items-center gap-3">
      <i data-lucide="shield"></i>
      Panel Quản Lý Chấm Công On/Off Duty
    </h1>
    <p class="text-gray-600 mb-8">Quản trị viên: <%= currentUser.displayName %> (<%= currentUser.position %> <%= currentUser.rank %>)</p>

    <!-- Thông báo -->
    <% if (success) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6 flex items-center">
        <i data-lucide="check-circle" class="w-5 h-5 mr-2"></i>
        <%= success %>
      </div>
    <% } %>
    <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6 flex items-center">
        <i data-lucide="alert-circle" class="w-5 h-5 mr-2"></i>
        Lỗi: <%= error %>
      </div>
    <% } %>

    <!-- Bảng quản lý -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="bg-gradient-to-r from-blue-600 to-blue-800 text-white px-6 py-4">
        <h2 class="text-xl font-semibold">Danh sách nhân viên</h2>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mã NV</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Họ tên</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quân hàm / Chức vụ</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Giờ vào ca</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Giờ ra ca</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Hành động</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% users.forEach(user => { %>
              <tr class="hover:bg-gray-50 transition">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= user.username %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 font-medium"><%= user.displayName %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= user.position %> <%= user.rank %></td>
                
                <td class="px-6 py-4 whitespace-nowrap text-sm <%= user.onDutyTime ? 'text-green-600 font-medium' : 'text-gray-400' %>">
                  <%= user.onDutyTime ? user.onDutyTime : 'Chưa chấm' %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm <%= user.offDutyTime ? 'text-red-600 font-medium' : 'text-gray-400' %>">
                  <%= user.offDutyTime ? user.offDutyTime : 'Chưa chấm' %>
                </td>

                <!-- Trạng thái hiện tại -->
                <td class="px-6 py-4 text-center">
                  <% if (user.onDuty && !user.offDuty) { %>
                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800 border border-green-300">
                      Đang On Duty
                    </span>
                  <% } else if (user.offDuty) { %>
                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800 border border-gray-300">
                      Đã Off Duty
                    </span>
                  <% } else { %>
                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800 border border-red-300">
                      Chưa Off Duty
                    </span>
                  <% } %>
                </td>

                <!-- Nút hành động (chỉ admin mới thấy) -->
                <td class="px-6 py-4 text-center text-sm">
                  <div class="flex justify-center gap-2">
                    <!-- Bật On Duty thủ công -->
                    <% if (!user.onDuty || !user.offDuty) { %>
                      <form action="/admin/toggle-on/<%= user._id %>" method="POST" class="inline">
                        <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded text-xs font-medium transition flex items-center gap-1">
                          <i data-lucide="log-in" class="w-4 h-4"></i> Vào ca
                        </button>
                      </form>
                    <% } %>

                    <!-- Tắt Off Duty thủ công -->
                    <% if (user.onDuty && !user.offDuty) { %>
                      <form action="/admin/toggle-off/<%= user._id %>" method="POST" class="inline">
                        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded text-xs font-medium transition flex items-center gap-1">
                          <i data-lucide="log-out" class="w-4 h-4"></i> Tắt 
                        </button>
                      </form>
                    <% } %>

                    <!-- Reset lại toàn bộ (nếu cần) -->
                    <% if (user.onDuty || user.offDuty) { %>
                      <form action="/admin/reset-duty/<%= user._id %>" method="POST" class="inline">
                        <button type="submit" onclick="return confirm('Xác nhận reset chấm công của <%= user.displayName %>?')" 
                                class="bg-gray-600 hover:bg-gray-700 text-white px-3 py-2 rounded text-xs font-medium transition">
                          Reset
                        </button>
                      </form>
                    <% } %>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Thống kê nhanh -->
    <div class="mt-8 grid grid-cols-1 md:grid-cols-4 gap-6">
      <div class="bg-gradient-to-br from-green-500 to-green-600 text-white p-6 rounded-xl shadow">
        <div class="text-3xl font-bold"><%= stats.onDuty %></div>
        <div class="text-green-100">Đang On Duty</div>
      </div>
      <div class="bg-gradient-to-br from-gray-500 to-gray-600 text-white p-6 rounded-xl shadow">
        <div class="text-3xl font-bold"><%= stats.offDuty %></div>
        <div class="text-gray-100">Đã Off Duty hôm nay</div>
      </div>
      <div class="bg-gradient-to-br from-red-500 to-red-600 text-white p-6 rounded-xl shadow">
        <div class="text-3xl font-bold"><%= stats.notStarted %></div>
        <div class="text-red-100">Chưa Off Duty</div>
      </div>
      <div class="bg-gradient-to-br from-blue-500 to-blue-600 text-white p-6 rounded-xl shadow">
        <div class="text-3xl font-bold"><%= users.length %></div>
        <div class="text-blue-100">Tổng tài khoản</div>
      </div>
    </div>

    <div class="mt-8 text-center text-gray-500 text-sm">
      <a href="/logout" class="text-blue-600 hover:underline">Đăng xuất</a>
    </div>
  </div>

  <script>
    lucide.createIcons();
  </script>
</body>
</html>